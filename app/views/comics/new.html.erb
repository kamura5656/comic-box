<div class='all-contents'>
  <%= render "boxes/sideber" %>
  <div class='central-contents'>
    <%= render "shared/header" %>
    <div class='main-contents'>

    <div class="comics-add-main">
      <h2 class="comics-add-title">漫画の情報を入力</h2>
      <%= form_with model: @comicshelf, url:comics_path, local: true do |f| %>
            <%= render 'shared/error_messages', model: f.object %>
      <%= f.file_field :image, id:"item-image" %>
      <div class="new-comics">
        <div class="weight-bold-text">
          タイトル
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"タイトル", maxlength:"20" %>
        <div class="items-explain">
          <div class="weight-bold-text">
            作者名
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :author, class:"items-text", id:"item-info", placeholder:"作者名" ,maxlength:"10" %>
        </div>
        <div class="items-explain">
          <div class="weight-bold-text">
            巻数
            <span class="indispensable">必須</span>
          </div>
          <%= f.number_field :volume, class:"volume-text", id:"volume-info", placeholder:"1", :size=>"60"%>
        </div>
        <div class="shelfs-explain">
          <div class="shelf-text">
            本棚に追加
            <span class="indispensable">必須</span>
          </div>
          <%= f.check_box :user_ids, {checked: true}, current_user.id, :nil %>
          <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
        </div>
      </div>
      <div class="sell-btn-contents">
        <%= f.submit "登録" ,class:"sell-btn" %>
        <%=link_to 'もどる', root_path, class:"back-btn" %>
      </div>
    </div>
    <% end %>

    </div>
    <%= render "shared/footer" %>
  </div>
</div>