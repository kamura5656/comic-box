<div class='all-contents'>
  <%= render "boxes/sideber" %>
  <div class='central-contents'>
    <%= render "shared/header" %>
    <div class='main-contents'>

      <%# <% 検索フォーム %> 
      <%= form_with model: @box, url: search_boxes_path, local: true, method: :get, class: "search-form" do |form| %>
        <%= form.text_field :keyword, placeholder: "題または作者名を入力", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
      <%# <% 検索フォーム %> 

      <ul class='list-comic'>
        <%= render partial: 'box', collection: @boxes %>
      </ul>

    </div>
    <%= render "shared/footer" %>
  </div>
</div>



